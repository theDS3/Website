---
import TeamMember from './TeamMember.astro';

import '../../styles/components/TeamGroup.scss';

import { team } from './config.d.ts';
---

{
  Object.entries(team).map(([group, members]) => {
    return (
      <div class="team-group">
        <div class="container">
          {members.map(({ name, position, src, alt }) => {
            return (
              <TeamMember
                name={name}
                position={position}
                src={src}
                alt={alt}
              />
            );
          })}
        </div>
      </div>
    );
  })
}
